<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="course_view_form">
            <field name="name">academia.curso.form</field>
            <field name="model">academia.curso</field>
            <field name="arch" type="xml">
                <form string="Curso Form">
                    <sheet>
                        <h1><field name="nombre"/></h1>
                        <group>
                            <group>
                                <field name="activo"/>
                            </group>
                            <group>
                                <field name="nivel"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Descripcion">
                                <field name="descripcion"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="curso_view_list">
            <field name="name">academia.curso.list</field>
            <field name="model">academia.curso</field>
            <field name="arch" type="xml">
                <tree string="Curso Lista">
                    <field name="nombre"/>
                    <field name="descripcion"/>
                    <field name="nivel"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="curso_view_search">
            <field name="name">academia.curso.search</field>
            <field name="model">academia.curso</field>
            <field name="arch" type="xml">
                <search>
                    <field name="nombre"/>
                    <field name="descripcion"/>
                </search>
            </field>
        </record>

    </data>
</odoo> 